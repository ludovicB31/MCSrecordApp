<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/logo"/>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="138dp"
        android:layout_height="61dp"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:text="Record"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="Stop"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/nomwav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="191dp"
        android:layout_toEndOf="@+id/textView"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nom de l'enregistrement"
        android:layout_toRightOf="@+id/textView" />


    <RadioGroup
        android:id="@+id/myRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="227dp"
        android:layout_marginRight="227dp">

        <RadioButton
            android:id="@+id/avance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="avance" />

        <RadioButton
            android:id="@+id/recule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignRight="@+id/btnStop"
            android:layout_marginRight="72dp"
            android:text="recule" />

        <RadioButton
            android:id="@+id/droite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="droite"
            tools:ignore="UnknownId" />

        <RadioButton
            android:id="@+id/gauche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gauche" />

        <RadioButton
            android:id="@+id/urgence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="etat urgence" />

        <RadioButton
            android:id="@+id/tourned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tourne droite" />

        <RadioButton
            android:id="@+id/tourneg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tourne gauche"
            tools:ignore="UnknownId" />

        <RadioButton
            android:id="@+id/flip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fais un flip" />

        <RadioButton
            android:id="@+id/arete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="arete toi" />

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/listDivider" />

    </RadioGroup>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="120dp"
        android:background="?android:attr/listDivider" />

    <View
        android:id="@+id/divider3"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnStop"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:text="dossier de destination" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginBottom="109dp"
        android:text="ne pas oublier d'autoriser l'utilisation du micro et de la mémoire dans les parametres de votre téléphone."
        android:textColor="@android:color/holo_red_dark"
        tools:text="ne pas oublier d'autoriser l'utilisation du micro et de la mémoire dans les parametres de votre téléphone." />

</RelativeLayout>
